<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.lookk.powerauth.dao.UserMapper">

    <insert id="add" parameterType="cn.lookk.powerauth.po.User">
        insert  into  tb_user (id , name,  create_time, update_time, delete)
        values (#{id}, #{name}, #{createTime}, #{updateTime}, #{delete})
    </insert>


   <update id="update" parameterType="cn.lookk.powerauth.po.User">
       update tb_user set name = #{name}, create_time=#{createTime}, update_time=#{updateTime}, delete=#{delete};
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="delete" parameterType="cn.lookk.powerauth.po.User">
        delete from tb_user where id=#{id}
    </delete>

    <resultMap type="cn.lookk.powerauth.po.User" id="userMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="delete" column="delete"/>
    </resultMap>

    <select id="findOneById" resultType="cn.lookk.powerauth.po.User">
        select * from  tb_user where id=#{id}
    </select>

    <select id="findAll" resultMap="userMap">
        select * from tb_user
    </select>

</mapper>